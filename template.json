{
  "template": "dd*",
  "settings": {
    "index": {
      "number_of_shards": 4,
      "number_of_replicas": "0"
    }
  },
  "mappings": {
    "_default_": {
      "dynamic_templates": [
        {
          "analyzedText": {
            "mapping": {
              "analyzer": "snowball",
              "type": "string",
              "term_vector": "with_positions_offsets",
              "store": true
            },
            "match": "*",
            "match_mapping_type": "string"
          }
        }
      ]
    },
    "dataset": {
      "properties": {
        "body": {
          "properties": {
            "dimensions": {
              "properties": {
                "id": {
                  "type": "string",
                  "index": "not_analyzed"
                },
                "type": {
                  "type": "string",
                  "index": "not_analyzed"
                }
              }
            },
            "id": {
              "type": "string",
              "index": "not_analyzed"
            },
            "metadata": {
              "properties": {
                "nextReleaseDate": {
                  "type": "string"
                },
                "releaseDate": {
                  "type": "date",
                  "format": "strict_date_optional_time||epoch_millis"
                }
              }
            }
          }
        },
        "id": {
          "type": "string",
          "index": "not_analyzed"
        },
        "type": {
          "type": "string",
          "index": "not_analyzed"
        }
      }
    }
  }
}