{
  "template": "ons*",
  "settings": {
    "index": {
      "number_of_shards": 4,
      "number_of_replicas": "0"
    }
  },
  "mappings": {
    "_default_": {
      "dynamic_templates": [
        {
          "analyzedText": {
            "mapping": {
              "analyzer": "snowball",
              "type": "string",
              "term_vector": "with_positions_offsets",
              "store":true
            }
          ,
            "match": "*",
            "match_mapping_type": "string"
          }
        }
      ]
    },
    "ons*": {
      "mappings": {
        "dataset": {
          "properties": {
            "body": {
              "properties": {
                "description": {
                  "type": "string",
                  "index": "not_analyzed"
                },
                "dimensions": {
                  "properties": {
                    "id": {
                      "type": "string",
                      "index": "not_analyzed"
                    },
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string",
                      "index": "not_analyzed"
                    }
                  }
                },
                "id": {
                  "type": "string"
                },
                "metadata": {
                  "properties": {
                    "associatedPublications": {
                      "type": "string"
                    },
                    "contact": {
                      "properties": {
                        "email": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "phone": {
                          "type": "string"
                        }
                      }
                    },
                    "description": {
                      "type": "string"
                    },
                    "methodology": {
                      "properties": {
                        "title": {
                          "type": "string"
                        },
                        "url": {
                          "type": "string"
                        }
                      }
                    },
                    "nationalStatistics": {
                      "type": "boolean"
                    },
                    "nextReleaseDate": {
                      "type": "string"
                    },
                    "releaseDate": {
                      "type": "string"
                    },
                    "termsAndConditions": {
                      "type": "string"
                    }
                  }
                },
                "title": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              }
            },
            "id": {
              "type": "string"
            },
            "type": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}